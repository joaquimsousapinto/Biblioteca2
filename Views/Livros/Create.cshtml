@model Biblioteca2.Models.Livro
@{
    ViewData["Title"] = "Livro - Criar";
}
<div class="border-bottom mt-4 mb-2">
    <h2><i class="fa fa-book text-danger"></i> @ViewData["Title"]</h2>
</div>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-1">
        <input asp-for="Titulo" class="form-control" />
        <label asp-for="Titulo" class="control-label"></label>
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
        <input asp-for="AnoPublicacao" class="form-control" />
        <label asp-for="AnoPublicacao" class="control-label"></label>
        <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
        <select asp-for="EditoraId" class="form-select" asp-items="ViewBag.EditoraId">
            <option value="">--- Seleciona uma editora ---</option>
        </select>
        <label asp-for="EditoraId" class="control-label"></label>
        <span asp-validation-for="EditoraId" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
        <input asp-for="AnoEdicao" class="form-control" />
        <label asp-for="AnoEdicao" class="control-label"></label>
        <span asp-validation-for="AnoEdicao" class="text-danger"></span>
    </div>
    <div class="form-floating mb-1">
        <input asp-for="Exemplares" class="form-control" />
        <label asp-for="Exemplares" class="control-label"></label>
        <span asp-validation-for="Exemplares" class="text-danger"></span>
    </div>
    <hr />
    <button type="submit" value="Save" class="btn btn-primary btn-sm" title="Guardar"><i class="fa fa-save"></i> <span class="small">Guardar</span></button>
    <a asp-action="Index" class="btn btn-default btn-sm" title="Voltar à Lista"><i class="fa fa-list"></i> <span class="small">Voltar à Lista</span></a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
